{
  "name": "@jscad/web2",
  "version": "2.0.0",
  "description": "Web Application for JSCAD",
  "repository": "https://github.com/jscad/OpenJSCAD.org",
  "main": "main.js",
  "unpkg": "dist/jscad-web.min.js",
  "scripts": {
    "dev-build": "esbuild src/web.js src/jscad-worker.js --jsx-factory=h --jsx-fragment=null --outdir=build --bundle --sourcemap --loader:.js=jsx --watch",
    "dev-build-viewers": "esbuild ./src/JscadReglViewer.js ./src/JscadThreeViewer.js ./src/JscadBabylonViewer.js --outdir=build --bundle --sourcemap --watch --format=esm",
    "dev-server": "http-server build -p 13080 -o index.html",
    "dev-copy": "copy-and-watch --watch app/** build",
    "dev-css": "node-sass -o build/ src/style.scss --source-comments",
    "dev-css-watch": "node-sass -o build/ src/style.scss --source-comments -w",
    "livereload": "livereload build -p 33080 -w 50",
    "dev": "npm-run-all --parallel dev-*",
    "desktop": "electron .",
    "dev-live": "npm-run-all --parallel livereload dev-build dev-server dev-copy dev-css dev-css-watch dev-build-viewers",
    "test": "ava 'src/**/*.test.js' --verbose --timeout 2m",
    "version": "npm run build && git add dist"
  },
  "contributors": [],
  "keywords": [
    "openjscad",
    "jscad",
    "web",
    "application"
  ],
  "license": "MIT",
  "dependencies": {
    "@babylonjs/core": "^4.2.1",
    "@babylonjs/materials": "^4.2.1",
    "@codemirror/basic-setup": "0.19.0",
    "@codemirror/commands": "0.19.5",
    "@codemirror/gutter": "0.19.4",
    "@codemirror/highlight": "0.19.6",
    "@codemirror/lang-javascript": "0.19.2",
    "@codemirror/state": "0.19.3",
    "@codemirror/view": "0.19.11",
    "@jscad/array-utils": "2.1.0",
    "@jscad/core": "2.3.8",
    "@jscad/examples": "2.3.1",
    "@jscad/io": "2.0.9",
    "@jscad/modeling": "2.5.3",
    "@jscad/regl-renderer": "2.4.1",
    "@jscad/vtree": "2.0.9",
    "@jsx6/jsx6": "^1.3.0",
    "file-saver": "2.0.2",
    "is-electron": "2.2.0",
    "webworkify": "1.5.0"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "copy-and-watch": "^0.1.5",
    "electron": "^15.3.0",
    "es-module-lexer": "^0.9.3",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/openjscad",
    "logo": "https://opencollective.com/openjscad/logo.txt"
  }
}
